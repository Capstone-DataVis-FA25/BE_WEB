// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  ADMIN
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String?
  firstName String?
  lastName  String?
  role      UserRole @default(USER)
  isActive  Boolean  @default(true)
  isVerified Boolean @default(false)
  isSocialAccount Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  

  currentHashedRefreshToken String?
  currentVerifyToken String?

  // Relations
  datasets Dataset[]

  @@map("users")
}

model Dataset {
  id          String   @id @default(cuid())
  name        String   @unique // Required dataset name - must be unique
  description String?  // Optional description
  data        Json     // Store the 2D array as JSON
  rowCount    Int      // Number of rows (for quick reference)
  columnCount Int      // Number of columns (for quick reference)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Foreign key to User
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("datasets")
}
